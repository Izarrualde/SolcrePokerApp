<!DOCTYPE html>
<html lang="en">
{% include 'header.html.twig' %}

<body>
    <div class="container">
        <div class="col-md-12">
            {% include 'breadcrumb.html.twig' %}
            {% include 'blockSession.html.twig' %}
            <div class="card">
                <div class="card-header bg-primary text-white">
                    {% include 'message.html.twig' %}
                    (Dealer & Service) Tips
                </div>
                <div class="card-body">
                    <section class="container row" style="width: auto; margin: auto auto;">
                        <article class="col-md-6">
                            <table class="table table-bordered table-hover table-condensed">
                                <thead class="thead-dark">
                                    <tr class="text-center bg-success">
                                        <th> Hora</th>
                                        <th> Propina (usd) </th>
                                        <th> Acciones </th>
                                    </tr>
                                </thead>
                                <tbody class="text-center">
                                     {% if session.dealerTips is empty %}
                                     <tr>
                                         <td colspan="9"> sin registros </td>
                                    </tr>
                                    {% endif %}
                                    {% for dealerTip in session.dealerTips %}
                                    <tr class="text-center">
                                        <td> {{ dealerTip.hour|date('H:i') }} </td>
                                        <td> {{ dealerTip.dealerTip|number_format }} </td>
                                        <td> <a href="/sessions/{{ dealerTip.idSession }}/tips/dealerTip/{{ dealerTip.id }}"> <i class="fas fa-pencil-alt"> </i> </a> <a href="/tips/dealertip/{{ dealerTip.id }}/remove"> <i class="fas fa-trash-alt"></i> </a></td>
                                    </tr>
                                    {% endfor %}
                                    <tr class="text-center bg-dark text-white">
                                        <th> TOTAL </th>
                                        <th> {{ session.dealerTipTotal|number_format }} </th>
                                        <th> </th>
                                    </tr>
                                </tbody>
                            </table>
                        </article>
                        <aside class="col-md-6">
                            <table class="table table-bordered table-hover table-condensed">
                                <thead class="thead-dark">
                                    <tr class="text-center bg-success">
                                        <th> Hora</th>
                                        <th> Propina </th>
                                        <th> Acciones </th>
                                    </tr>
                                </thead>
                                <tbody class="text-center">
                                    {% if session.serviceTips is empty %}
                                    <tr>
                                        <td colspan="9"> sin registros </td>
                                    </tr>
                                    {% endif %}
                                    {% for serviceTip in session.serviceTips %}
                                    <tr>
                                        <td> {{ serviceTip.hour|date('H:i') }} </td>
                                        <td> {{ serviceTip.serviceTip|number_format }} </td>
                                        <td> <a href="/sessions/{{ serviceTip.idSession }}/tips/serviceTip/{{ serviceTip.id }}"> <i class="fas fa-pencil-alt"> </i> </a> <a href="/tips/servicetip/{{ serviceTip.id }}/remove"> <i class="fas fa-trash-alt"></i> </a></td>
                                    </tr>
                                    {% endfor %}
                                    <tr class="text-center bg-dark text-white">
                                        <th> TOTAL </th>
                                        <th> {{ session.serviceTipTotal|number_format }} </th>
                                        <th> </th>
                                    </tr>
                                </tbody>
                            </table>
                        </aside>
                        <table class="table table-bordered table-hover table-condensed">
                            <thead>
                                <td colspan="8">
                                    <a href="/{{ session.id }}/tips/form" class="btn btn-lg btn-block btn-danger"> <i class="fas fa-plus"></i></a>
                                </td>
                            </thead>
                        </table>
                    </section>
                </div>
            </div>
        </div>
    </div>
    <script src="../../js/functions.js"></script>
    <script src=”../../js/jquery.js”> </script> <script src=”../../js/bootstrap.min.js”> </script> </body> </html>