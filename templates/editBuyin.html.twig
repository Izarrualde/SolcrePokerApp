<!DOCTYPE html>
<html lang="en">
{% include 'header.html.twig' %}

<body>
    <div class="container">
        <div class="col-md-8">
            {% include 'breadcrumb.html.twig' %}
            <div class="card">
                <div class="card-header bg-primary text-white">
                    Editar Buyin
                </div>
                <div class="card-body">
                    <section class="container row justify-content-center">
                        <article>
                            <form class="was-validated" action="/buyins/{{ buyin.id }}/update" method="post">
                                <input name="id" type="hidden" value="{{ buyin.id }}">
                                <input name="idSession" type="hidden" value="{{ buyin.user_session.session.id }}">
                                <input name="idUserSession" id="idUserSession" type="hidden" required="true" value="{{ buyin.user_session.id }}">
                                <div class="form-group">
                                    <label class="sr-only" for="amountCash"> amountCash: </label>
                                    <input class="form-control" name="amountCash" id="amountCash" type="text" autofocus="true" placeholder="amountCash" required="true" value="{{ buyin.amountCash }}">
                                </div>
                                <div class="form-group">
                                    <label class="sr-only" for="amountCredit"> amountCredit: </label>
                                    <input class="form-control" name="amountCredit" id="amountCredit" type="text" placeholder="amountCredit" required="true" value="{{ buyin.amountCredit }}">
                                </div>
                                <div class="form-group">
                                    <label class="sr-only" for="hour"> hora: </label>
                                    <input class="form-control" name="hour" id="hour" type="datetime-local" required="true" value="{{ buyin.hour | date('Y-m-d') }}T{{ buyin.hour | date('H:i') }}">
                                    <small id="hour" class="form-tet text-muted"> Fecha y hora </small>
                                </div>
                                <input name="approved" id="approved" type="hidden" required="true" value="{{ buyin.approved }}">
                                <div class="form-group">
                                    <input class="btn btn-lg btn-block btn-primary" type="submit" value="Editar" />
                                </div>
                                <br><br><br><br>
                            </form>
                        </article>
                    </section>
                </div>
            </div>
        </div>
    </div>
</body>

</html>