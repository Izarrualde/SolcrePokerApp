<!DOCTYPE html>
<html lang="en">
{% include 'header.html.twig' %}

<body>
    <div class="container">
        <div class="col-md-8">
            {% include 'breadcrumb.html.twig' %}
            <div class="card">
                <div class="card-header bg-primary text-white">
                    Editar Usuario
                </div>
                <div class="card-body">
                    <section class="container row justify-content-center">
                        <article>
                            <form class="was-validated" action="/usersSession/{{ userSession.id }}/update" method="post">
                                <input name="id" type="hidden" value="{{ userSession.id }}">
                                <input name="idUser" id="idUser" type="hidden" value="{{ userSession.idUser }}">
                                <input name="idSession" id="idSession" type="hidden" value="{{ userSession.idSession }}">
                                <input class="form-control" name="points" id="points" type="hidden" required="true" value="{{ userSession.points }}">
                                <input name="isApproved" id="isApproved" type="hidden" value="{{ userSession.isApproved }}">
                                <input class="form-control" name="cashout" id="cashout" type="hidden" required="true" value="{{ userSession.cashout }}">

                                <div class="form-group">
                                    <label class="sr-only" for="start"> Inicio: </label>
                                    <input class="form-control" name="start" id="start" type="datetime-local" value="{{ session.userSession.startTime|date('Y-m-d') }}T{{ session.userSession.startTime|date('H:i') }}">
                                    <small id="start" class="form-tet text-muted"> Fecha y hora de inicio </small>
                                </div>
 
                                <div class="form-group">
                                    <input class="btn btn-lg btn-block btn-primary" type="submit" value="Editar" />
                                </div>
                                <br><br><br><br>
                            </form>
                        </article>
                    </section>
                </div>
            </div>
        </div>
    </div>
</body>

</html>