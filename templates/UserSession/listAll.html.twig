<!DOCTYPE html>
<html lang="en">
{% include 'header.html.twig' %}

<body>
    <div class="container">
        <div class="col-md-12">
            {% include 'breadcrumb.html.twig' %}
            {% include 'blockSession.html.twig' %}
            <div class="card">
                <div class="card-header bg-primary text-white">
                    {% include 'message.html.twig' %}
                    Usuarios
                </div>
                <div class="card-body">
                    <section class="container row" style="width: auto; margin: auto auto;">
                        <article class="col-md-12">
                            <table class="table table-bordered table-hover table-condensed">
                                <thead class="text-center bg-dark text-white">
                                    <th> Jugador </th>
                                    <th> Hora <br>de inicio </th>
                                    <th> Cashin </th>
                                    <th> Cashout </th>
                                    <th> Acciones </th>
                                </thead>
                                <tbody class="text-center">
                                    {% include 'withoutRecords.html.twig' %}
                                    {% for user in session.usersSession %}
                                    {% if user.endTime is empty %}
                                    <tr class="text-center">
                                        <td>
                                            {{ user.user.name }} {{ user.user.lastname }}
                                        </td>
                                        <td> {{ user.startTime|date('H:i') }}
                                        </td>
                                        <td> {{ user.cashin|number_format }} ({{ user.totalCredit|number_format }}) </td>
                                        <td> {{ user.cashout|default("-") }} </td>
                                        <td> <a href="/userssession/{{ user.id }}/formclose"> <i class="fas fa-sign-out-alt"></i> </a> <a href="/sessions/{{ user.idSession }}/usersSession/{{ user.id }}"> <i class="fas fa-pencil-alt"> </i> </a> <a href="/{{ user.idSession }}/usersSession/{{ user.id }}/remove"> <i class="fas fa-trash-alt"></i> </a> </td>
                                    </tr>
                                    {% endif %}
                                    {% endfor %}
                                    <tr>
                                        <td colspan="9">
                                            <a href="/{{ session.id }}/usersSession/form" class="btn btn-lg btn-block btn-danger"> <i class="fas fa-plus"></i></a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </article>
                    </section>
                </div>
            </div>
            <div class="card">
                <div class="card-header bg-primary text-white">
                    Usuarios Inactivos
                </div>
                <div class="card-body">
                    <section class="container row" style="width: auto; margin: auto auto;">
                        <article class="col-md-12">
                            <table class="table table-bordered table-hover table-condensed">
                                <thead class="text-center bg-dark text-white">
                                    <th> Inactivo </th>
                                    <th> Hora <br> de inicio </th>
                                    <th> Cashin </th>
                                    <th> Cashout </th>
                                    <th> Hora <br> de fin </th>
                                    <th> acciones </th>
                                </thead>
                                <tbody class="text-center">
                                    {% include 'withoutRecords.html.twig' %}
                                    {% for user in session.usersSession %}
                                    {% if user.endTime is not empty %}
                                    <tr class="text-center">
                                        <td>
                                            {{ user.user.name }} {{ user.user.lastname }}
                                        </td>
                                        <td> {{ user.startTime|date('H:i') }} </td>
                                        <td> {{ user.cashin|number_format }} ({{ user.totalCredit }}) </td>
                                        <td> {{ user.cashout|number_format }} </td>
                                        <td> {{ user.endTime|date('H:i') }}
                                        </td>
                                        <td> <a href="/sessions/{{ user.idSession }}/usersSession/{{ user.id }}"> <i class="fas fa-pencil-alt"> </i> </a> <a href="/{{ user.idSession }}/usersSession/{{ user.id }}/remove"> <i class="fas fa-trash-alt"></i> </a></td>
                                    </tr>
                                    {% endif %}
                                    {% endfor %}
                                </tbody>
                            </table>
                        </article>
                    </section>
                </div>
            </div>
        </div>
    </div>
    <script src="../../js/functions.js"></script>
    <script src=”../../js/jquery.js”> </script> <script src=”../../js/bootstrap.min.js”> </script> </body> </html>