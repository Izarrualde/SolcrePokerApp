<!DOCTYPE html>
<html lang="en">
{% include 'header.html.twig' %}

<body>
	<div class="container">
		<div class="col-md-8">
		{% include 'breadcrumb.html.twig' %}
			<div class="card">
				<div class="card-header bg-primary text-white">
					Ingresar Comision
				</div>
				<div class="card-body">
					<section class="container row justify-content-center">
						<article>
							<form class="was-validated" action="/sessions/{{ session.id }}/comissions" method="post">

									<input type="hidden" class="form-control" name="id" id="id" type="text" required="true" value="null">
								
									<input class="form-control" name="idSession" id="idSession" type="hidden" required="true" value="{{ session.id }}">

								<div class="form-group">
									<label class="sr-only" for="hour"> hour: </label>
									<input class="form-control" name="hour" id="hour" type="datetime-local" required="true" value="{{ date('c') | date('Y-m-d') }}T{{ date('c') | date('H:i') }}">
									<small id="hour" class="form-tet text-muted"> Fecha y hora </small>
								</div>

								<div class="form-group">
									<label class="sr-only" for="comission"> comission: </label>
									<input class="form-control" name="comission" id="comission" type="text" placeholder="Comission" required="true">
								</div>

								<div class="form-group">
									<input class="btn btn-lg btn-block btn-primary" type="submit" value="Enviar" />
								</div>
								<br><br><br><br>
							</form>
						</article>
					</section>
				</div>
			</div>
		</div>
	</div>
	
</body>
</html>