<!DOCTYPE html>
<html lang="en">
{% include 'header.html.twig' %}

<body>
    <div class="container">
        <div class="col-md-12">
            {% include 'breadcrumb.html.twig' %}
            <div class="card">
                <div class="card-header bg-primary text-white">
                    {% if message is not empty %}
                    <div class="alert alert-success">
                        <button type="button" class="close" data-dismiss="alert">x</button>
                        {{ message }}
                    </div>
                    {% endif %}
                    Usuarios
                </div>
                <div class="card-body">
                    <section class="container row" style="width: auto; margin: auto auto;">
                        <article class="col-md-12">
                            <table class="table table-bordered table-hover text-center">
                                <thead class="text-center bg-dark text-white">
                                    <th> # </th>
                                    <th> Jugador </th>
                                    <th> Tel√©fono </th>
                                    <th> horas </th>
                                    <th> acciones </th>
                                <tbody>
                                    {% if users is empty %}
                                    <tr>
                                        <td colspan="9"> sin registros </td>
                                    </tr>
                                    {% endif %}
                                    {% for user in users %}
                                    <tr>
                                        <th> {% set counter = ( counter | default(0) ) + 1 %}
                                            <p>{{ counter }}</p>
                                        </th>
                                        <td> {{ user.name }} {{ user.lastname }} </td>
                                        <td> {{ user.username }} </td>
                                        <td> {{ user.hours }} </td>
                                        <td> <a href="/users/{{ user.id }}"> <i class="fas fa-pencil-alt"> </i> </a><a href="/users/{{ user.id }}/remove"> <i class="fas fa-trash-alt"></i> </a> </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                            <a href="/form" class="btn btn-lg btn-block btn-danger"> <i class="fas fa-plus"></i></a>
                        </article>
                    </section>
                </div>
            </div>
        </div>
    </div>
</body>

</html>