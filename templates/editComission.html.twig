<!DOCTYPE html>
<html lang="en">
{% include 'header.html.twig' %}

<body>
	<div class="container">
		<div class="col-md-8">
		{% include 'breadcrumb.html.twig' %}
			<div class="card">
				<div class="card-header bg-primary text-white">
					Editar Comision
				</div>
				<div class="card-body">
					<section class="container row justify-content-center">
						<article>
							<form class="was-validated" action="/comissions/{{ session.comission.id }}/update" method="post">
								
								<input name="id" type="hidden" value="{{ session.comission.id }}">
								
								<input class="form-control" name="idSession" id="idSession" type="hidden" required="true" value="{{ session.idSession }}">

								<div class="form-group">
									<label class="sr-only" for="hour"> hora: </label>
									<input class="form-control" name="hour" id="hour" type="datetime-local" required="true" value="{{ session.comission.hour | date('Y-m-d') }}T{{ session.comission.hour | date('H:i') }}">
									<small id="hour" class="form-tet text-muted"> Fecha y hora </small>
								</div>

								<div class="form-group">
									<label class="sr-only" for="comission"> comission: </label>
									<input class="form-control" name="comission" id="comission" type="text" autofocus="true" placeholder="Comission" required="true" value="{{ session.comission.comission }}">
								</div>

								<div class="form-group">
									<input class="btn btn-lg btn-block btn-primary" type="submit" value="Editar" />
								</div>
								<br><br><br><br>
							</form>
						</article>
					</section>
				</div>
			</div>
		</div>
	</div>
	

</body>
</html>