<!DOCTYPE html>
<html lang="en">
{% include 'header.html.twig' %}

<body>
    <div class="container">
        <div class="col-md-8">
            {% include 'breadcrumb.html.twig' %}
            <div class="card">
                <div class="card-header bg-primary text-white">
                    Ingresar Gasto de Sesión
                </div>
                <div class="card-body">
                    <section class="container row justify-content-center">
                        <article>
                            <form class="was-validated" action="/sessions/{{ session.id }}/expenses" method="post">
                                <input type="hidden" class="form-control" name="id" id="id" type="text" required="true" value="null">
                                <input class="form-control" name="idSession" id="idSession" type="hidden" required="true" value="{{ session.id }}">
                                <div class="form-group">
                                    <label class="sr-only" for="description"> Descripcion: </label>
                                    <input class="form-control" name="description" id="description" type="string" placeholder="Descripción" required="true" value="">
                                </div>
                                <div class="form-group">
                                    <label class="sr-only" for="amount"> Monto </label>
                                    <input class="form-control" name="amount" id="amount" type="number" placeholder="Monto" required="true">
                                </div>
                                <div class="form-group">
                                    <input class="btn btn-lg btn-block btn-primary" type="submit" value="Enviar" />
                                </div>
                                <br><br><br><br>
                            </form>
                        </article>
                    </section>
                </div>
            </div>
        </div>
    </div>
</body>

</html>