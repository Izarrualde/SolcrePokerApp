<!DOCTYPE html>
<html lang="en">
{% include 'header.html.twig' %}

<body>
	<div class="container">
		<div class="col-md-8">
		{% include 'breadcrumb.html.twig' %}
			<div class="card">
				<div class="card-header bg-primary text-white">
					Ingresar Buyin
				</div>
				<div class="card-body">
					<section class="container row justify-content-center">
						<article>
							<form class="was-validated" action="/sessions/{{ session.idSession }}/buyins" method="post">

									<!--<input class="form-control" name="id" id="id" type="hidden" required="true" value="">-->
									<input type="hidden" class="form-control" name="id" id="id" type="text" required="true" value="null">

									<input class="form-control" name="idSession" id="idSession" type="hidden" required="true" value="{{ session.idSession }}">

								<div class="form-group">
									<select class="custom-select" name="idUserSession" id="idUserSession" required="true">
										<option value=""> --Seleccione un Jugador--</option>
										{% for userSession in session.usersSession %}

											{% if userSession.endTime == null %} 
												<option value="{{ userSession.id }}"> {{ userSession.user.name }} {{ userSession.user.lastname }} </option>
											{% endif %}
										{%  endfor %}
									</select>
								</div>

									<!--<input class="form-control" name="idPlayer" id="idPlayer" type="hidden" value="">-->

								<div class="form-group">
									<label class="sr-only" for="amountCash"> monto cash: </label>
									<input class="form-control" name="amountCash" id="amountCash" type="text" placeholder="monto cash" required="true" value=""> 
								</div>

								<div class="form-group">
									<label class="sr-only" for="amountCredit"> monto credito: </label>
									<input class="form-control" name="amountCredit" id="amountCredit" type="text" placeholder="monto credito" required="true" value="">

								</div>

								<div class="form-group">
									<label class="sr-only" for="hour"> hora: </label>
									<input class="form-control" name="hour" id="hour" type="datetime-local" required="true" value="{{ date('c') | date('Y-m-d') }}T{{ date('c') | date('H:i') }}">
									<small id="hour" class="form-tet text-muted"> Fecha y hora </small>
								</div>



								<input class="form-control" name="approved" id="approved" type="hidden" required="true" value="1">
								
								<div class="form-group">
									<input class="btn btn-lg btn-block btn-primary" type="submit" value="Enviar"/>
								</div>
							</form>
						</article>
					</section>
				</div>
			</div>
		</div>
	</div>
	
	
</body>
</html>