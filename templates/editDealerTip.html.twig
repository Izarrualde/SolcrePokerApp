<!DOCTYPE html>
<html lang="en">
{% include 'header.html.twig' %}

<body>
	<div class="container">
		<div class="col-md-8">
		{% include 'breadcrumb.html.twig' %}
			<div class="card">
				<div class="card-header bg-primary text-white">
					Editar DealerTip
				</div>
				<div class="card-body">
					<section class="container row justify-content-center">
						<article>
							<form class="was-validated" action="/tips/dealertip/{{ dealerTip.id }}/update" method="post" >
								
								<input name="id" type="hidden" value="{{ dealerTip.id }}">

								<input name="idSession" type="hidden" id="idSession" type="text" required="true" value="{{ dealerTip.idSession }}">

								<div class="form-group">
									<label class="sr-only" for="hour"> hora: </label>
									<input class="form-control" name="hour" id="hour" type="datetime-local" required="true" value="{{ dealerTip.hour | date('Y-m-d') }}T{{ dealerTip.hour | date('H:i') }}">
									<small id="hour" class="form-tet text-muted"> Fecha y hora </small>
								</div>

								<div class="form-group" >
									<label class="sr-only" for="dealerTip"> dealerTip: </label>
									<input class="form-control" name="dealerTip" id="dealerTip" type="text" placeholder="dealerTip" required="true" value="{{ dealerTip.dealerTip }}">
								</div>

								<div class="form-group">
									<input class="btn btn-lg btn-block btn-primary" type="submit" value="Editar" />
								</div>
								<br><br><br><br>
							</form>
						</article>
					</section>
				</div>
			</div>
		</div>
	</div>	

</body>
</html>