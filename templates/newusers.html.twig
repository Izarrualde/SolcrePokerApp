<!DOCTYPE html>
<html lang="en">
{% include 'header.html.twig' %}

<body>
	<div class="container">
		<div class="col-md-8">
		{% include 'breadcrumb.html.twig' %}
			<div class="card">
				<div class="card-header bg-primary text-white">
					Ingresar Usuario
				</div>
				<div class="card-body">
					<section class="container row justify-content-center">
						<article>
							<form class="was-validated" action="/sessions/{{ session.id }}/usersSession" method="post">

									<input class="form-control" name="id" id="id" type="hidden" value="" required="true">

									<input class="form-control" name="idSession" id="idSession" type="hidden" required="true" value="{{ session.id }}">

								<input class="form-control" name="approved" id="approved" type="hidden" value="">	
								
								<div class="form-group">
									<select multiple class="custom-select" name="user_id[]" id="user_id" required="true">
										<option value="" disabled> --Seleccione un Jugador--</option>
										{% for user in users %}
											<option value="{{ user.id }}"> {{ user.name }} {{ user.lastname }} ({{ user.id }}) </option>
										{% endfor %}
									</select>
								</div>							

								<input name="accumulatedPoints" id="accumulatedPoints" type="hidden" value="1">

								<input class="form-control" name="cashout" id="cashout" type="hidden">
							

								<input name="start" id="start" type="hidden" required="true" value="{{ date('c') | date('Y-m-d') }}T{{ date('c') | date('H:i') }}">

								<input name="end" id="end" type="hidden" required="true" value="">
								 {# <!-- =getStarbyFirstBuyin()--> #} 

								<div class="form-group">
									<input class="btn btn-lg btn-block btn-primary" type="submit" value="Enviar" />
								</div>
							</form>
						</article>
					</section>
				</div>
			</div>
		</div>
	</div>
	
</body>
</html>