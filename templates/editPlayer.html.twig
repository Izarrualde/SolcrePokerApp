<!DOCTYPE html>
<html lang="en">
{% include 'header.html.twig' %}

<body>
    <div class="container">
        <div class="col-md-8">
            {% include 'breadcrumb.html.twig' %}
            <div class="card">
                <div class="card-header bg-primary text-white">
                    {% if message is not empty %}
                    <div class="alert alert-success">
                        <button type="button" class="close" data-dismiss="alert">x</button>
                        {{ message }}
                    </div>
                    {% endif %}
                    Editar Jugador
                </div>
                <div class="card-body">
                    <section class="container row justify-content-center">
                        <article>
                            <form class="was-validated" action="/users/{iduser}/update" method="post">
                                <input name="id" type="hidden" value="{{ user.id }}">
                                <input name="password" type="hidden" value="{{ user.password }}">
                                <input name="isActive" type="hidden" value="{{ user.isActive }}">
                                <input name="hours" type="hidden" value="{{ user.hours }}">
                                <input name="points" type="hidden" value="{{ user.points }}">
                                <input name="multiplier" type="hidden" value="{{ user.multiplier }}">
                                <input name="sessions" type="hidden" value="{{ user.sessions }}">
                                <input name="results" type="hidden" value="{{ user.results }}">
                                <input name="cashin" type="hidden" value="{{ user.cashin }}">

                                <div class="form-group">
                                    <label class="sr-only" for="name"> Nombre: </label>
                                    <input class="form-control" name="name" id="start" type="text" placeholder="Nombre" required="true" value="{{ user.name }}">
                                </div>
                                <div class="form-group">
                                    <label class="sr-only" for="name"> Apellido: </label>
                                    <input class="form-control" name="lastname" id="lastname" type="text" value="{{ user.lastname }}" placeholder="Apellido" required="true" autofocus=>
                                </div>
                                <div class="form-group">
                                    <label class="sr-only" for="username
									"> Apellido: </label>
                                    <input class="form-control" name="username" id="username" type="text" placeholder="Nombre de usuario" required="true" value="{{ user.username }}">
                                </div>
                                <div class="form-group">
                                    <label class="sr-only" for="email
									"> Email: </label>
                                    <input class="form-control" name="email" id="email" type="text" placeholder="email" required="true" value="{{ user.email }}">
                                </div>
                                <div class="form-group">
                                    <input class="btn btn-lg btn-block btn-primary" type="submit" value="Editar" />
                                </div>
                                <br><br><br><br>
                            </form>
                        </article>
                    </section>
                </div>
            </div>
        </div>
    </div>
</body>

</html>