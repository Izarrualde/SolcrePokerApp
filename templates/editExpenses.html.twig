<!DOCTYPE html>
<html lang="en">
{% include 'header.html.twig' %}

<body>
    <div class="container">
        <div class="col-md-8">
            {% include 'breadcrumb.html.twig' %}
            <div class="card">
                <div class="card-header bg-primary text-white">
                    Editar item
                </div>
                <div class="card-body">
                    <section class="container row justify-content-center">
                        <article>
                            <form class="was-validated" action="/sessions/{{ session.id }}/expenses/{{ session.expenditure.id }}/update" method="post">
                                <input name="id" type="hidden" value="{{ session.expenditure.id }}">
                                <input class="form-control" name="idSession" id="idSession" type="hidden" required="true" value="{{ session.id }}">
                                <div class="form-group">
                                    <label class="sr-only" for="description"> Descripcion: </label>
                                    <input class="form-control" name="description" id="description" type="string" required="true" value="{{ session.expenditure.description }}">
                                </div>
                                <div class="form-group">
                                    <label class="sr-only" for="amount"> Monto: </label>
                                    <input class="form-control" name="amount" id="amount" type="text" autofocus="true" placeholder="Monto" required="true" value="{{ session.expenditure.amount }}">
                                </div>
                                <div class="form-group">
                                    <input class="btn btn-lg btn-block btn-primary" type="submit" value="Editar" />
                                </div>
                                <br><br><br><br>
                            </form>
                        </article>
                    </section>
                </div>
            </div>
        </div>
    </div>
</body>

</html>